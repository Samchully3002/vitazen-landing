// Top bar for promotional message
.texttop
    a.text-center(href="#")
        span.firstText Glutathione + Vitamin C
        span.secondText 1-month limited edition package, 40% discount!
        img(src="./assets/img/icon/ic_arrow_right.svg")

// Main navigation bar
nav.navbar.navbar-expand-lg.navbar-light.bg-white.border-bottom.sticky-top(style="padding-left: 50px; padding-right: 50px; padding-top: 20px; padding-bottom: 20px;")
    // Logo
    a.navbar-brand(href="#") 
        img.imgLogo(src="././assets/img/vita_icon.png" alt="Vitazen Logo")

    // Hamburger menu for smaller screens
    button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
        span.navbar-toggler-icon

    // Navigation menu
    .collapse.navbar-collapse#navbarNavdiv
        ul.navbar-nav.mx-auto
            .menuNav
                li.nav-item
                    a.nav-link.active(href="index.html") Home
                li.nav-item
                    a.nav-link(href="products.html") Products
                li.nav-item
                    a.nav-link(href="v-sight.html") V-Sight
                li.nav-item
                    a.nav-link(href="aboutUs.html") About Us
    // Contact button to the right
    a.btnContact(href="contact-us.html") Contact Us
        