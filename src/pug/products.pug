        script.
            // Function to handle the window resize
            function handleResize() {
                let priceWrappercss = "";
                if (window.innerWidth < 800) {
                    priceWrappercss = `
                        <span class="discountPrice"> ± Rp 350.000 </span>
                        <div class="mobilediscountWrapper">
                            <span class="normalPrice"> Rp 500.000 </span>
                            <div class="rateWrapper">
                                <span class="numberRate"> 43% </span>
                            </div>
                        </div>`;
                } else {
                    priceWrappercss = `
                        <span class="discountPrice"> ± Rp 450.000 </span>
                        <span class="normalPrice"> Rp 950.000 </span>
                        <div class="rateWrapper">
                            <span class="numberRate"> 43% </span>
                        </div>`;
                }

                $('#priceTagcss1,#priceTagcss2,#priceTagcss3,#priceTagcss4,#priceTagcss5,#priceTagcss6').append(priceWrappercss);
            }

            // Attach the resize event listener
            window.addEventListener('resize', handleResize);

            handleResize();  